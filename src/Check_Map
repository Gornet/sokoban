int map_is_valid(partie_t partie)
{
	int i = 0;
	int j = 0;
	int a =0;
	int c =0;
	int p = 0;

	while(i < partie->p->hauteur)
	{
		while(j < partie->p->largeur)
		{
			if(tab[i * partie->p->hauteur + j] == 'A')
			{
				a++;
			}
			if(tab[i * partie->p->hauteur + j] == 'C')
			{
				c++;
			}
			if(tab[i * partie->p->hauteur + j] == 'P')
			{
				p++;
			}

			j++;

		}
		i++;
	}

	if( a != c || p != 1)
	{
		return 1;
	}

	return 0;
}
